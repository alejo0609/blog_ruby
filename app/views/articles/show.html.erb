

<caption><h3 align="center" style="color:blue">ARTÍCULO Nº <%= @article.id %> </h3></caption>
<HR align="left" size="2" width="1420" color="black" noshade>
<br><br>
<table>
  <tr>
    <th align="left">Título: </th>
    <td><%= @article.title %></td>
  </tr>
    <th align="left">Descripción:</th>
    <td><%= @article.text %></td>
  </tr>
</table>



<ul>
  <li><%= link_to "Editar", edit_article_path(@article) %></li>
  <li><%= link_to "Eliminar", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "¿Esta seguro?"
                  } %></li>
  <br>
  <li><%= link_to 'Página anterior', articles_path %></li>
</ul>